@using System.Web.Optimization
@{ 
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title-Simple Blog</title>
    @Styles.Render("~/styles")
</head>
<body>
    <header>
        <h1>
            <a href="@Url.RouteUrl("home")">Simlpe Blog </a>
            <i class="glyphicon glyphicon-bell" >It's a bell</i>
        </h1>
       


        @if (User.Identity.IsAuthenticated)
        {
            <p>Welcome back,@User.Identity.Name</p>
            <p><a href="@Url.RouteUrl("logout")">Logout</a></p>


            if (User.IsInRole("admin"))
            {
                <a href="@Url.Action("Index", "Posts", new {area="admin"})">View posts in admin</a>
            }
        }
        else
        {
            <a href="@Url.RouteUrl("login")">Login</a>
        }


    </header>

    <!---INSERT VIEW HERE-->
    @RenderBody()

    <footer>
        &copy;@DateTime.UtcNow.Year - Me
    </footer>
    @Scripts.Render("~/scripts")
    @RenderSection("Scripts", false)
</body>
</html>
